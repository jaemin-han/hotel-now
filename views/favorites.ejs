<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Hotel Favorites Page</title>
    <link rel="stylesheet" href="/css/normalize.css">
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat+Alternates" rel="stylesheet">
</head>
<body style="background-image: url(../../image/hotel3.jpg);">

<div class="main-container1">
  <div class="mainleft1">
    <h1>Hotel Now</h1>
  </div>

  <div class="maincenter1">
    <h2><%# user.username %></h2>
  </div>

  <div class="mainright1" class="logout">
    <form action="/auth?_method=DELETE" method="post">
      <input type="submit" value="Logout">
    </form>
  </div>
</div>

    <div class="marketing-box2">
      <div class="marketing2.5">
        <h2><span>Selected</span> Airport Hotels for Price Comparison.</h2>
      </div>

      <div class="marketing3.5">
        <a href="/users/profile">Back to Search</a>
      </div>
    </div>

  <% for (let i=0; i < savedHotels.length; i++) { %>
  <div class="flex-container">
      <div class="favorite-list">
        <div class="split">
          <ul class="hotels">
            <li><span><%= savedHotels[i].property_name %></span></li><br>
            <li>Book Direct: <%= savedHotels[i].phone %></li><br>
            <li><a href="/hotels/favorites/edit/<%= savedHotels[i]._id %>">Add Comments</a></li>
          </ul>
        </div>

      <div class="split1">
        <h3><span>$ <%= savedHotels[i].price %></span> USD</h3>
        <form class="delete-favorites" action="/hotels/favorites/<%= savedHotels[i]._id %>?_method=DELETE" method="POST">
          <input type="submit" value="Delete">
        </form>
      </div>
    <% }; %>
    </div>
  </div>

  <script src="http://code.jquery.com/jquery-3.1.1.min.js" type="text/javascript"></script>
  <script src="/scripts.js" type="text/javascript"></script>
</body>
</html>
